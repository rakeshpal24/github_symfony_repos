{# empty Twig template #}
{% extends "base.html.twig" %}

{% block content %}
    <table id="tblSymfonyRepos" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Owner</th>
                <th>Description</th>
                <th>Created On</th>
                <th>Updated On</th>
                <th>Home Page</th>
                <th>Size</th>
                <th>Forks</th>
                <th>Stars</th>
                <th>Open Issues</th>
                <th>License</th>
            </tr>
        </thead>
        <tbody>
            {% if tableData.data|length > 0 %}
                {% for repo in tableData.data %}
                <tr>
                    <td><a href="{{ repo.url }}" target="_blank">{{ repo.name|capitalize }}</a></td>
                    <td>
                        <a href="{{ repo.owner.url }}" target="_blank">
                            <img src="{{ repo.owner.avatar }}" alt="" style="width:36px"> - {{repo.owner.type|capitalize}}
                        </a>
                    </td>
                    <td>{{ repo.description }}</td>
                    <td>{{ repo.createdOn|date("Y-m-d H:i:s") }}</td>
                    <td>{{ repo.updatedOn|date("Y-m-d H:i:s") }}</td>
                    <td><a href="{{ repo.homepage }}" target="_blank">Home page</a></td>
                    <td>{{ repo.size }}</td>
                    <td>{{ repo.forks }}</td>
                    <td>{{ repo.stars }}</td>
                    <td><a href="{{ repo.issuesURL }}" target="_blank">{{ repo.openIssues }}</a></td>
                    <td>{{ repo.license }}</td>
                </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="11">No data available.</td>
                </tr>
            {% endif %}
        </tbody>
    </table>
{% endblock %}

